{
  "name": "config",
  "description": "Developer's toolbox",
  "license": "MIT",
  "author": "Nikolay Stoynov",
  "repository": {
    "type": "git",
    "url": "https://github.com/katawaredev/config.git"
  },
  "bugs": {
    "url": "https://github.com/katawaredev/config/issues"
  },
  "homepage": "https://github.com/katawaredev/config#readme",
  "keywords": [
    "eslint",
    "stylelint",
    "rollup"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint --cache --fix",
    "*.{css,less,scss,js,jsx,tsx}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,mjs,vue,json,css,less,scss,md,mdx,graphql,yaml}": "prettier --write"
  },
  "scripts": {
    "postinstall": "npm run lerna bootstrap",
    "lerna": "lerna",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,mjs,vue,json,css,less,scss,md,mdx,graphql,yaml}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.0"
  }
}
