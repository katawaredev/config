{
  "name": "config",
  "description": "Developer's toolbox",
  "license": "MIT",
  "author": "Nikolay Stoynov",
  "repository": {
    "type": "git",
    "url": "https://github.com/katawaredev/config.git"
  },
  "bugs": {
    "url": "https://github.com/katawaredev/config/issues"
  },
  "homepage": "https://github.com/katawaredev/config#readme",
  "keywords": [
    "eslint",
    "stylelint",
    "rollup"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint --cache --fix",
    "*.{js,jsx,tsx,css,less,scss}": "stylelint --cache --fix",
    "*.{md}": "markdownlint --fix",
    "*.{js,jsx,ts,tsx,mjs,vue,json,css,less,scss,md,mdx,graphql,yaml}": "prettier --write"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "16.13.0"
      }
    },
    "extends": [
      "./packages/eslint-config-permissive"
    ]
  },
  "stylelint": {
    "extends": [
      "./packages/stylelint-config-permissive"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ],
  "scripts": {
    "postinstall": "npx lerna bootstrap",
    "lint:code": "eslint . --fix --ext js,jsx,ts,tsx,mjs",
    "lint:styles": "stylelint --fix '**/*.{js,jsx,tsx,css,less,scss}'",
    "lint:markdown": "markdownlint --fix '**/*.md'",
    "lint": "run-s -c lint:code lint:styles lint:markdown",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,mjs,vue,json,css,less,scss,md,mdx,graphql,yaml}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "markdownlint": "^0.19.0",
    "markdownlint-cli": "^0.22.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "stylelint": "^13.2.1",
    "typescript": "^3.8.3"
  }
}
